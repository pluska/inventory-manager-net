@page "/access-denied"
@using Microsoft.AspNetCore.Identity

<PageTitle>Access Denied - Inventory Manager</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-2xl">
                <div class="card-body text-center p-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-shield-exclamation" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-2xl font-weight-bold mb-3">Access Denied</h2>
                    <p class="text-muted mb-4">
                        You don't have permission to access this resource. 
                        Please contact your administrator if you believe this is an error.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary rounded-2xl">
                            <i class="bi bi-house-door me-2"></i>
                            Go to Dashboard
                        </a>
                        <a href="/login" class="btn btn-outline-secondary rounded-2xl">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
