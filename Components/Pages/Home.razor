@page "/"
@page "/home"
@namespace InventoryManager.Components.Pages
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Inventory Manager - Welcome</PageTitle>

<AuthorizeView>
    <Authorized>
        <!-- Authenticated users - redirect to dashboard -->
        <div class="text-center py-5">
            <div class="alert alert-info border-info rounded-2xl shadow-lg mx-auto" style="max-width: 500px;">
                <h4 class="mb-3">🔐 Welcome Back!</h4>
                <p class="mb-4">You are already logged in. Redirecting to your dashboard...</p>
                <div class="spinner-border text-info" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <!-- Public landing page for unauthenticated users -->
        <!-- Hero Section -->
        <div class="hero-section bg-gradient-primary text-white py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h1 class="display-4 fw-bold mb-4">Manage Your Inventory Like a Pro</h1>
                        <p class="lead mb-4">Streamline your business operations with our powerful inventory management system. Track products, manage suppliers, and monitor stock movements with ease.</p>
                        <div class="d-flex gap-3">
                            <a href="register" class="btn btn-light btn-lg rounded-2xl px-4">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
                            </a>
                            <a href="login" class="btn btn-outline-light btn-lg rounded-2xl px-4">
                                <i class="bi bi-person-plus me-2"></i>
                                Sign In
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6 text-center">
                        <div class="hero-image">
                            <i class="bi bi-box-seam display-1 text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="container py-5">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="display-5 fw-bold text-primary mb-3">Why Choose Us?</h2>
                    <p class="lead text-muted">Powerful features designed for modern businesses</p>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 rounded-2xl shadow-lg">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-box-seam fs-1"></i>
                            </div>
                            <h4 class="card-title">Product Management</h4>
                            <p class="card-text">Easily add, edit, and track your products with detailed information and stock levels.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100 border-0 rounded-2xl shadow-lg">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-truck fs-1"></i>
                            </div>
                            <h4 class="card-title">Supplier Management</h4>
                            <p class="card-text">Keep track of your suppliers and manage relationships efficiently.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100 border-0 rounded-2xl shadow-lg">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-graph-up fs-1"></i>
                            </div>
                            <h4 class="card-title">Stock Tracking</h4>
                            <p class="card-text">Monitor stock movements, set alerts, and generate comprehensive reports.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="bg-light py-5">
            <div class="container text-center">
                <h3 class="fw-bold mb-3">Ready to Get Started?</h3>
                <p class="lead mb-4">Join thousands of businesses that trust our inventory management system.</p>
                <a href="register" class="btn btn-primary btn-lg rounded-2xl px-5">
                    <i class="bi bi-rocket-takeoff me-2"></i>Start Free Trial
                </a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            // Redirect to dashboard after a short delay
            await Task.Delay(2000);
            Navigation.NavigateTo("/dashboard", forceLoad: false);
        }
    }
}


