@page "/"
@using InventoryManager.Data
@using InventoryManager.Data.Entities
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Context

<PageTitle>Dashboard - Inventory Manager</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary">Inventory Dashboard</h1>
            <p class="lead">Welcome to your inventory management system</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white rounded-2xl shadow-lg">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Total Products</h5>
                            <h2 class="mb-0">@(Context.Products?.Count() ?? 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-box-seam fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white rounded-2xl shadow-lg">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Active Suppliers</h5>
                            <h2 class="mb-0">@(Context.Suppliers?.Count() ?? 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-truck fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white rounded-2xl shadow-lg">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Low Stock Items</h5>
                            <h2 class="mb-0">@(Context.Products?.Where(p => p.Stock <= p.MinimumStock).Count() ?? 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-exclamation-triangle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white rounded-2xl shadow-lg">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Recent Movements</h5>
                            <h2 class="mb-0">@(Context.StockMovements?.Count() ?? 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-arrow-left-right fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card rounded-2xl shadow-lg">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recent Stock Movements</h5>
                </div>
                <div class="card-body">
                    @if (Context.StockMovements?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Type</th>
                                        <th>Quantity</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var movement in Context.StockMovements.OrderByDescending(m => m.Timestamp).Take(5))
                                    {
                                        <tr>
                                            <td>@movement.Product?.Name</td>
                                            <td>
                                                <span class="badge @(movement.MovementType == MovementType.IN ? "bg-success" : "bg-danger")">
                                                    @movement.MovementType
                                                </span>
                                            </td>
                                            <td>@movement.Quantity</td>
                                            <td>@movement.Timestamp.ToString("MM/dd/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No stock movements recorded yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card rounded-2xl shadow-lg">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="products" class="btn btn-primary rounded-2xl">
                            <i class="bi bi-plus-circle me-2"></i>Add Product
                        </a>
                        <a href="suppliers" class="btn btn-outline-primary rounded-2xl">
                            <i class="bi bi-truck me-2"></i>Manage Suppliers
                        </a>
                        <a href="stock-movements" class="btn btn-outline-success rounded-2xl">
                            <i class="bi bi-arrow-left-right me-2"></i>Record Movement
                        </a>
                        <a href="reports" class="btn btn-outline-info rounded-2xl">
                            <i class="bi bi-graph-up me-2"></i>View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
