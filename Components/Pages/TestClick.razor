@page "/test-click"

<PageTitle>Test Click</PageTitle>

<div class="container mt-4">
    <h1>Click Test Page</h1>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Blazor Click Handlers</h3>
            <button class="btn btn-primary me-2" @onclick="IncrementCount">
                Blazor Click (Count: @Count)
            </button>
            <button class="btn btn-secondary me-2" @onclick="() => Count = 0">
                Reset Count
            </button>
        </div>
        
        <div class="col-md-6">
            <h3>HTML Click Handlers</h3>
            <button class="btn btn-success me-2" onclick="alert('HTML onclick works!')">
                HTML Click
            </button>
            <button class="btn btn-warning" onclick="document.getElementById('result').innerHTML = 'HTML click worked!'">
                Update HTML
            </button>
        </div>
    </div>
    
    <div class="mt-4">
        <h4>Results:</h4>
        <div id="result">No clicks yet</div>
        <p>Blazor Count: @Count</p>
    </div>
</div>

@code {
    private int Count { get; set; } = 0;
    
    private void IncrementCount()
    {
        Count++;
        StateHasChanged();
    }
}
