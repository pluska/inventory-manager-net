@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@inject SignInManager<IdentityUser> SignInManager
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main class="@(IsAuthenticated ? "" : "full-width")">
        <nav class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center">
                        <span class="text-muted me-3">Welcome</span>
                        <a href="/logout" class="btn btn-outline-danger btn-sm rounded-2xl">
                            <i class="bi bi-box-arrow-right me-1"></i>
                            Logout
                        </a>
                    </div>
                </Authorized>
                <NotAuthorized>
                <div class="d-flex align-items-center justify-content-between w-100">
                <div class="navbar-brand d-flex align-items-center">
                 <a href="/">
                    <img src="/favicon.png" alt="Inventory Manager Logo" class="navbar-logo me-2" />
                    <span class="brand-text text-black fw-bold fs-4 text-decoration-none">Inventory Manager</span>
                 </a>
                </div>
                    <div class="d-flex align-items-center gap-3">
                        <a href="login" class="btn btn-primary rounded-2xl shadow-md">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </a>
                        <a href="register" class="btn btn-outline-primary rounded-2xl">
                            <i class="bi bi-person-plus me-2"></i>
                            Register
                        </a>
                    </div>
                </div>
                </NotAuthorized>
            </AuthorizeView>
        </nav>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool IsAuthenticated { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        IsAuthenticated = authState.User.Identity?.IsAuthenticated == true;
    }
}


